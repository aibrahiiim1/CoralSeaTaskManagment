@using CoralSeaTaskManagment.Ui.Models.DTO

@model EclassDto
@{
    ViewBag.PageTitle = "Class Management";
    ViewBag.CardTitle = "Create Class";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div className="home-container">
    <form asp-action="DeleteClass" method="post">
        <input hidden asp-for="Id" />
        <div class="mp-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mp-3">
            <button type="submit" class="btn btn-primary">Delete</button>
            <a asp-action="Index" asp-controller="Eclass" class="btn btn-warning">Back</a>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

