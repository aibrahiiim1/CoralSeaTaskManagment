@using CoralSeaTaskManagment.Ui.Models.DTO

@model GroomAddDto
@{
    ViewBag.PageTitle = "Rooms Management";
    ViewBag.CardTitle = "Create Room";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div className="home-container">
    <form asp-action="Create" method="post">
        <div class="mp-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>        
        <div class="mp-3">
            <label asp-for="Building"></label>
            <input asp-for="Building" class="form-control" />
            <span asp-validation-for="Building" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HotelId"></label>
            <select asp-for="HotelId" class="form-control"
                    asp-items="@(new SelectList(ViewBag.hotels,"Id","Name"))">
                <option disabled selected>-- Select Hotel -- </option>
            </select>
        </div>
        <div class="mp-3">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" asp-controller="Grooms" class="btn btn-warning">Back</a>
        </div>

    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
