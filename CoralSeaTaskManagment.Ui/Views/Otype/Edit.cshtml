@using CoralSeaTaskManagment.Ui.Models.DTO

@model OtypeDto

@{
    ViewBag.PageTitle = "Assign Management";
    ViewBag.CardTitle = "Assign";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div className="home-container">
    <form asp-action="Edit" method="post">
        <input asp-for="Id" />
        <input asp-for="Hotels.Id" />
        <input asp-for="Fronthousflag.Value" />
        <div class="mp-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mp-3">
            <label asp-for="HotelId"></label>
            <select asp-for="HotelId" class="form-control"
                    asp-items="@(new SelectList(ViewBag.hotels,"Id","Name"))">
                <option disabled selected>-- Select Hotel -- </option>
            </select>
            <span asp-validation-for="HotelId" class="text-danger"></span>
        </div>
        <div class="mp-3">
            <label asp-for="Fronthousflag"></label>
            <select asp-for="Fronthousflag" class="form-control"
                    asp-items="@(new SelectList(ViewBag.otype,"Value","Text"))">
                <option disabled selected>-- Select Hotel -- </option>
            </select>
            <span asp-validation-for="Fronthousflag" class="text-danger"></span>
        </div>
        <div class="mp-3">
            <button type="submit" class="btn btn-primary">Edit</button>
            <a asp-action="Index" asp-controller="Otype" class="btn btn-warning">Back</a>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
